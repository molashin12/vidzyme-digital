rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload product images to their own folder
    match /users/{userId}/product-images/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can access their generated videos
    match /users/{userId}/generated-videos/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temporary uploads folder for processing
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public assets (templates, thumbnails, etc.)
    match /public/{allPaths=**} {
      allow read: if true;
    }
  }
}